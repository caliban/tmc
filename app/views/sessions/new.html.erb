<% provide(:page_title, "Log in") %>
<h1>Log in</h1>

<div class="container">
  <div class="form-login" role"form">
    <%= form_tag sessions_path do %>

      <%= label_tag :email %>
      <%= email_field_tag :email, params[:email] %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>
			
			<%= label_tag :remember_me %>
			<%= check_box_tag :remember_me, params[:remember_me] %>

      <%= submit_tag "Log in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New to tmc? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>